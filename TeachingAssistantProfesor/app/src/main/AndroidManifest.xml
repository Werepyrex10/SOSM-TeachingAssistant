<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="malvolyo.teachingassistantprofesor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayCourseQuestionsActivity" />
        <activity android:name=".DisplayCoursesActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".QuizMenuActivity" />
        <activity android:name=".ActiveQuizActivity" />
        <activity
            android:name=".AddQuizActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".InputActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".HistoryQuizSelectActivity" />
        <activity android:name=".HistoryQuizActivity"></activity>
    </application>

</manifest>